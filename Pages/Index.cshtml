@page
@model IndexModel
@{
    Layout = "_Layout"; // aqui você define o layout principal
}

<!-- MENU PRINCIPAL -->
<div class="center-title">
    <h1 class="title mt-3 mb-5">Menu Principal</h1>
</div>


<main>
    <div class="container options mb-5">

        <!-- MENU PARTE DE CIMA-->
        <div class="row d-flex">
            <div class="col-12 col-md-6">
                <a href="">
                    <div class="optionMenu d-flex p-4 p-sm-5">
                        <i class="bi bi-exclamation-triangle"></i>
                        <h2>Pendências</h2>
                    </div>
                </a>
            </div>

            <div class="col-12 col-md-6">
                <a href="">
                    <div class="optionMenu d-flex p-4 p-sm-5">
                        <i class="bi bi-plus-lg"></i>
                        <h2>Abrir Chamado</h2>
                    </div>
                </a>
            </div>
        </div>

        <!-- MENU PARTE DE BAIXO-->
        <div class="row d-flex">
            <div class="col-12 col-lg-4">
                <a href="">
                    <div class="optionMenu consultCall d-flex p-4 p-sm-5">
                        <i class="bi bi-search"></i>
                        <h2>Consultar Chamados(s)</h2>
                    </div>
                </a>
            </div>

            <div class="col-12 col-lg-4">
                <a href="">
                    <div class="optionMenu d-flex p-4 p-sm-5">
                        <i class="bi bi-clock"></i>
                        <h2>Histórico</h2>
                    </div>
                </a>
            </div>

            <div class="col-12 col-lg-4">
                <a href="">
                    <div class="optionMenu d-flex p-4 p-sm-5">
                        <i class="bi bi-telephone-fill"></i>
                        <h2>Atentimento</h2>
                    </div>
                </a>
            </div>
        </div>
    </div>
</main>

